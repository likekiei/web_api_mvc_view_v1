    <div class="card mb-3">
        <!--Card Header-->
        <div class="card-header padd-lr-7" style="cursor: pointer" data-bs-toggle="collapse" data-bs-target="#clps_EditCompany">
            <h4 style="margin:0px">修改公司</h4>
        </div>
        <div id="clps_EditCompany" class="collapse show">
            <!--Card Body-->
            <div class="card-body padd-lr-7">
                <div>
                    <input asp-for="CRUD" type="hidden" id="CRUD" class="_CRUD" />
                    <input asp-for="Id" type="hidden" id="Id" class="_Id" />
                </div>

                @*<div class="row">
                <div class="col-md-4">
                <div class="form-group">
