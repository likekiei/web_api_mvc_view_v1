                placeholder="請輸入" title="公司" readonly="readonly" />
                <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div><hr />
                </div>
                </div>*@

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="No" class="control-label">代號</label>
                            <input asp-for="No" type="text"
                                   id="No" class="_No form-control w-100"
                                   style=""
                                   maxlength="" placeholder="請輸入" title="代號" readonly/>
                            <span asp-validation-for="No" class="text-danger"></span>
                        </div><hr />
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">名稱</label>
                            <input asp-for="Name" type="text"
                                   id="Name" class="_Name form-control w-100"
                                   style=""
                                   maxlength="" placeholder="請輸入" title="名稱" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div><hr />
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CompanyLevelId" class="control-label">公司分級</label>
                            <select asp-for="CompanyLevelId" asp-items="@(IEnumerable<SelectListItem>)ViewBag.DropList_CompanyLevel"
                                    id="CompanyLevelId_ByEdit" class="_CompanyLevelId _select2 form-control w-100"
                                    style=""
                                    placeholder="請輸入" title="公司"></select>
                            <span asp-validation-for="CompanyLevelId" class="text-danger"></span>
                        </div><hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EMail" class="control-label">信箱</label>
                            <input asp-for="EMail" type="text"
                                   id="Mail" class="_Mail form-control w-100"
                                   style=""
                                   placeholder="請輸入" title="信箱" />
                            <span asp-validation-for="EMail" class="text-danger"></span>
                        </div><hr />
                    </div>
                </div>

                <div class="row" style="display:none">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="IsStop" for="IsStop_Edit" class="form-check-label">是否停用</label>
                            <input asp-for="IsStop" type="checkbox"
                                   id="IsStop_Edit" class="_IsStop form-check-input"
                                   style=""
                                   placeholder="請輸入" title="是否停用" />
                            <span asp-validation-for="IsStop" class="text-danger"></span>
                        </div><hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Rem" class="control-label">備註</label>
                            <textarea asp-for="Rem" type="text"
                                      id="Rem" class="_Rem form-control w-100"
                                      style=""
                                      placeholder="請輸入" title="備註"></textarea>
                            <span asp-validation-for="Rem" class="text-danger"></span>
                        </div><hr />
                    </div>
                </div>

                <div class="_mDevelopMemo _mHideMemo alert alert-danger" style="display:none" role="alert">
                    <ul style="margin:0">
                        @*<li>【公司】欄位，只有登入者所屬公司等級為[最高級]，允許變更。</li>
                        <li>【公司】欄位，連動[角色權限][部門][客戶]欄位。</li>*@
                    </ul>
                </div>
            </div>  

            <!--Card Footer-->
            <div class="card-footer text-muted padd-lr-7">
                <Button type="submit" class="btn btn-primary" onclick="">保存</Button>

                <a href="@Url.Action("EditView_Company", "Company", new { key = Model.Id })"
                   data-ajax="true" data-ajax-method="Post" data-ajax-success="ShowTab_EditCompany(data)"
                   data-ajax-begin="myaa_LoadingOn()" data-ajax-complete="myaa_LoadingOff()" data-ajax-failure="myaa_ComFail()"
                   class="_btnReset btn btn-primary">
                    重整
                </a>
            </div>
        </div>
    </div>
</form>

